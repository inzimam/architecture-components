<RelativeLayout android:id="@+id/isLiveLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="@dimen/margin_submenu_end"
    android:background="@drawable/live_border"
    android:paddingStart="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imgLiveBlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_live_circle"
        android:layout_margin="3dp" />

    <TextView
        android:id="@+id/liveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgLiveBlink"
        android:textColor="@color/colorWhite"
        android:text="REC"
        android:paddingEnd="5dp"
        android:textSize="@dimen/activity_margin_half" />
</RelativeLayout>